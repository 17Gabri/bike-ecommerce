{% extends 'base.html.twig' %}

{% block title %}Bik-E-Commerce - La bicicleta de tus sueños a un click
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<main>
		<section class="products">
			{% for product in products %}
				<div class="product" onclick="goToProductPage('{{product.id}}')">
					<a href="{{ path('product_detail', {'id': product.id}) }}">
						<img src="{{ product.images[0] }}" alt="{{ product.name }}">
						<h2>{{ product.name }}</h2>
						<p>Precio:
							{{ product.price }}€</p>
					</a>
				</div>
			{% endfor %}
		</section>
	</main>
{% endblock %}
